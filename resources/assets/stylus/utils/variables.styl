$font = Roboto, sans-serif

$orange = #fdf6d1

$yellow = #f3df6d

$grey = #f0f0f0

$color = #2d2d2d

$blue = #4e61eb

$black = #121212

center-text()
	display flex
	flex-direction column
	text-align center
	justify-content center
	
button(color)
	center-text()
	font-size 12px
	width 170px
	height 40px
	cursor pointer
	border 4px solid color
	user-select none
	transition .2s ease
	box-shadow 0 10px 10px -10px rgba(0,0,55, 0.3), 0 1px 0 0 rgb(189, 157, 81)
	
button--hover(color)
	background-color rgba(color, .9)
	
button__reg(color)
	box-shadow inset 2px 2px 3px color
	text-shadow 1px 3px 4px color
	background-color rgba(color, 0.3)
	transition .2s ease

button__reg--hover(color)
	box-shadow inset 2px 2px 3px rgba(color, .0)
	text-shadow 1px 3px 4px rgba(color, .0)
	background-color rgba(white, .1)
			
placeholder()
	&::-webkit-input-placeholder 
		{block}
	&::-moz-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
		
block-border()
	border 1px solid #BBBBBB
	border-radius 2px
	
$header
	margin 25px 0 0 35px