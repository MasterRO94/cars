.header
	background-color white

	.container
		height 100px
		// ------ all align mixin ------
		display flex
		align-items center
		justify-content space-between
		// -----------------------------
	
	&_logo
		background url(../img/logo.jpg) center no-repeat
		width 165px
		height 62px
	
	&_title
		color $color
		font-weight 300
		font-size 12px
		word-spacing 2px
	
	&_buttons
		cursor pointer

		display flex
		
	&_signup,
	&_signin
		display flex
		justify-content center
		text-align center
		flex-direction column
		
		font-weight 300
		font-size 15px

		width 150px
		height 50px
		margin 0 10px
		border 4px solid transparent
		
		&:hover
			border 4px solid $grey
			
.profile
	display flex
	align-items center
	align-content space-between
	
	span
		font-weight 700
		font-size 12px
	
	&_names
		margin 0 20px
		
		h5
			margin 0
			
		h5:last-child
			color #aaa
			font-weight 300
			font-size 12px
			margin-top 5px
			
	&_ava
		width 40px
		height 40px
		border-radius 50%
		overflow hidden
		
		img
			margin-top -10px