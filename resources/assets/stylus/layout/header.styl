.header
	background-color #FFFFFA

	.container
		height 100px
		// ------ all align mixin ------
		display flex
		align-items center
		justify-content space-between
		// -----------------------------
		padding 0 10px
	
	&_logo
		background url(../img/logo.jpg) center no-repeat
		background-size 100%
		width 225px
		height 40px
	
	&_title
		color $color
		font-weight 300
		font-size 13px
		word-spacing 2px
		margin-top 10px
		font-style italic
	
	&_inputs
		display flex
		position relative
		
	&_login,
	&_pass
		display flex
		justify-content center
		text-align center
		flex-direction column
		
		font-weight 300
		font-size 12px

		width 150px
		padding 8px
		border 2px solid $grey
		text-align left
		outline none
		
		+placeholder()
			color $color
		
	&_login
		margin-right 10px
	&_pass
		padding-right 30px
		width 130px
		
	&_submit-arrow
		background url(../img/sign-in-arrow.jpg) no-repeat
		width 26px
		height 26px
		position absolute
		right 4px
		top 4px
		cursor pointer
			
	&_user-info
		display flex
		align-items center
		align-content space-between
		
		cursor pointer
		height 80px
		
		position relative
		
		&_names
			margin 0 20px
			
			transition opacity .3s ease-in-out
			
			h5
				margin 0
				font-weight 400
				
		&_company-name
			color #aaa
			font-weight 300
			font-size 12px
			margin-top 5px
				
		&_ava
			width 40px
			height 40px
			border-radius 50%
			
			background-size cover
			background-repeat no-repeat
			background-position center
			
			transition opacity .3s ease-in-out
		
		&_arrow
			background url(../img/profile-arrow.png) center no-repeat
			width 18px
			height 18px
			position relative
			left 0
			
			transition left .3s ease-in-out
		
		&:hover &_arrow
			left 10px
		
		&:hover &_ava,
		&:hover &_names
			opacity .6
			
		&_notification
			background-color $yellow
			padding 2px 5px
			font-size 12px
			font-weight 400
			color white
			border-radius 2px
			position absolute
			top 10px
			right 0