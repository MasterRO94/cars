.header
	background-color #FEFEFE

	.container
		height 100px
		display flex
		align-items center
		justify-content space-between
		padding 0 10px
		position relative
		
	&_box
		margin-right auto
		width 280px
		margin-top -20px
	
	&_logo
		background url(../img/komtrans-logo.jpg) center no-repeat
		background-size 100%
		width 225px
		height 40px
		position relative
		
		&:after
			content "www.komtrans-club.ru"
			position absolute
			left 0px
			bottom -20px
			color $black
			font-size 80%
			font-style italic
	
	&_title
		color $color
		font-weight 400
		font-size 12px
		word-spacing 2px
		font-style italic
		text-align center 
		margin auto
		
		span
			color #f44
			font-size 120%
			font-weight 300
		
	
	&_inputs
		display flex
		justify-content flex-end
		position relative
		top 0px
		right 0px 
		
	&_login,
	&_pass
		display flex
		justify-content center
		text-align center
		flex-direction column
		font-weight 300
		font-size 12px
		width 110px
		padding 8px
		border 2px solid $grey
		text-align left
		outline none
		
		+placeholder()
			color $color
		
	&_login
		margin-right 10px
	&_pass
		padding-right 30px
		width 130px
		
	&_submit-arrow
		width 56px
		height 26px
		position absolute
		right 4px
		top 4px
		cursor pointer
		background-color $yellow
		font-size 12px
		line-height 30px
		text-align center
		color: #FFF
		
	&_user-box
		width 280px
		margin-left auto
			
	&_user-info
		display flex
		align-items center
		align-content space-between
		cursor pointer
		height 80px
		position relative
		right 10px
		
		&_names
			margin 0 20px
			transition opacity .3s ease-in-out
			
			h5
				margin 0
				font-weight 400
				
		&_company-name
			color #aaa
			font-weight 300
			font-size 12px
			margin-top 5px
				
		&_ava
			width 40px
			height 40px
			border-radius 50%
			background-size cover
			background-repeat no-repeat
			background-position center
			transition opacity .3s ease-in-out
		
		&_arrow
			background url(../img/profile-arrow.png) center no-repeat
			width 18px
			height 18px
			position relative
			left 0
			transition left .3s ease-in-out
		
		&:hover &_arrow
			left 10px
		
		&:hover &_ava,
		&:hover &_names
			opacity .6