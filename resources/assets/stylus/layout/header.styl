.h_c
	height 100px
	// ------ all align mixin ------
	display flex
	align-items center
	justify-content space-between
	// -----------------------------
	
.h_logo
	background url(../img/logo.jpg) center no-repeat
	width 165px
	height 62px
	
.h_title
	color $color
	font-weight 300
	font-size 12px
	word-spacing 2px
	
.h_buttons
	cursor pointer

	display flex
	
	div
		display flex
		justify-content center
		text-align center
		flex-direction column
		
		font-weight 300
		font-size 15px

		width 150px
		height 50px
		margin 0 10px
		border 4px solid transparent
		
		&:hover
			border 4px solid $grey