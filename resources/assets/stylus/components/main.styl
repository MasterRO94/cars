button(color)
	center-text()
	font-size 12px
	width 170px
	height 40px
	cursor pointer
	border 4px solid color
	
.wide-image
	background url(../img/background.jpg) center -164px no-repeat
	height 615px
	width 100%
	position absolute
	
.row-image
	background url(../img/row.jpg) center no-repeat
	width 70px
	height 30px
	
.search-side-bar
	background-color $yellow
	padding 15px 30px 30px
	border-radius 2px
	
	h3
		font-size 17px
		margin-left 10px
		
	p
		margin 25px 0 0 0
		text-align center
		line-height 25px
		font-size 12px
	
	h4
		margin 25px 0 5px 0
		font-weight 300
		font-size 14px
		
	select
		background-color $yellow
		font-size 13px
		color #988c47
		border 1px solid white
		width 100%
		padding 13px
		outline none
		cursor pointer
		
		option
			border 1px solid white
			height 30px
			
	input
		background-color white
		padding 13px
		border 2px solid white
		outline none
		color $yellow
		
	.s-s_more
		background-color $yellow
		border 1px solid white
		color #988c47
		
	.s-s_send
		button(white)
		margin 20px auto 0
		
	input[type="checkbox"]
		margin 15px 10px 0 0
		background-color $yellow
		padding 10px
		border 1px solid white
		-webkit-appearance none
		-moz-appearance none
		appearance none
		cursor pointer
		
		& + label
			font-size 13px
			position relative
			margin 0 15px 0 0
			top -5px
		

	.s-s_toogler
		margin 10px 0 0 10px
		display flex
		
		div
			font-size 14px
			background-color #fced9a
			margin-right 1px
			width 90px
			cursor pointer
			height 35px
			center-text()
			
			&.active
				background-color white
			
.parts-block
			
	.p-b_header
		margin 35px 0 0 0
		display flex
		
		h3
			display inline-block
			margin 5px 0 0 15px
			font-size 17px
		hr
			margin 17px 0 0 75px
			flex-grow 1

	.p-b_categories
		margin 10px 0 0 70px
		height 160px
		display flex
		flex-flow column wrap
		width 440px
		
		li
			float left
			font-size 12px
			margin-bottom 5px
			
			span
				padding 9px 15px
				display inline-block
				cursor pointer
				
				&.active, &:hover
					background-color $orange