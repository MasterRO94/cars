#create-company-logo
	display none
	
.popup
	padding 30px
	background-color white
	margin auto
	border-radius 2px
	position relative	

	&_redx
		width 10px
		position absolute
		top 19px
		right 10px
		height 10px
		cursor pointer
		margin auto
		background url(../img/redx.png) no-repeat center
		user-select none
		opacity .7
		
		&:hover
			opacity 1
		
		&--left
			left -20px
			margin 0
			
		&--simple
			position static
			display block
	
	&_plus-sign
		padding 5px
		width 25px
		position relative
		top -5px
		left 10px
		cursor pointer
		text-align center
		background-color $yellow
		border-radius 2px
		display inline-block
		user-select none
		
		&:hover
			background-color #FFE136
			
		
		&--flex
			position static
			margin-left 15px
	
	&_content
		margin auto
	
	&_comp-logo
		height 160px
		margin-top 10px
		text-align center
		
		img
			max-height 160px
			max-width 297px
			
	&_pick-file
		margin-left 20px
		font-size 13px
		border-radius 2px
		background-color $yellow
		padding 10px
		cursor pointer
		color $color
		
		&:hover
			background-color #FFE136
		
	&_header-field
		display flex
		align-items center
		
	&_error
		font-size 14px
		color #222
		width 450px
	
	&--search,
	&--sign-up,
	&--alert
		width 450px
	
	&--search &_content,
	&--sign-up &_content,
	&--edit-profile,
	&--settings
		width 300px
		
		
	&--feedback,
	&--avatar
		width 780px
		
	&--avatar &_content
		display flex
		flex-direction column
		align-items center
		
	&--create-company
		width 660px
		
	&--feedback &_header
		text-align left
		

	
	&_header
		margin 0
		text-align center
		
		&--small
			font-weight 400
			font-size 15px
			
		&--left
			text-align left
		
	&_checks
		margin 20px 0
		
	&_checks &_label
		margin 0 10px 0 0
		padding 10px
	
	&_check
		width 15px
		height 15px
		outline none
		margin-right 15px
		
		&:checked:after
			background white url(../img/tip.png) no-repeat center
		
		&:after
			content ''
			cursor pointer
			outline none
			width 20px
			height 20px
			background-color white
			display block
			border 1px solid #e4e4e4
			
	&_field
		display flex
		flex-direction column
		margin-top 20px
		
		&--makes
			margin-top 0
		
		&--feedback
			display flex
			flex-direction row
			justify-content space-between
			
	&_select
		padding 15px 10px
		cursor pointer
		font-size 13px
		display block
		outline none
		width 275px
		border 1px solid #e4e4e4
		
		background white url(../img/selectbox-arrow.png) no-repeat 95% center
		
		&-selectBox-dropdown-menu
			z-index 99999
			position absolute
			top 0
			border 1px solid #e4e4e4
			max-height 300px
			overflow-y auto
			box-shadow 0 10px 10px -10px rgba(0,0,55,0.3)
	
	&_option
		a
			background-color white
			padding 7px 10px
			cursor pointer
			font-size 13px
			display block
			outline none
			width auto
			&:hover
				background-color #eee
		
	&_label
		font-size 13px
		margin-bottom 5px
		
	&_input
		background-color white
		border 1px solid #e4e4e4
		width 275px
		color $color
		padding 15px 10px
		font-size 13px
		display block
		outline none
		margin 5px 0
		
		&--header
			display block
			width auto
	
	&_textarea
		background-color white
		border 1px solid #e4e4e4
		width 275px
		color $color
		padding 15px 10px
		font-size 13px
		display block
		outline none
		resize none
		
	&_button
		button($yellow)
		margin 30px auto 0
		position relative
		transition all .2s linear
		
		&::before
			transition all .4s ease-in
			content ''
			display block
			position absolute
			top 0
			width 100%
			height 100%
			opacity 0
			transform scale(0, 0)
			background url(../img/success.png) no-repeat center
			background-size contain
			
		&:hover
			button--hover($yellow)
			
	&_info
		font-style italic
		margin 30px 0
		text-align right
		font-size 90%
		
	&_agree
		float left
		
	&_agree + div
		margin-top 30px
		
		a
			display inline
			text-decoration underline
			color #00F

.selectBox-disabled
	color #ccc
	
	a
		&:hover
			background-color white