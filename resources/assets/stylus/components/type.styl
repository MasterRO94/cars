.type
	position relative
	margin 35px 0 0 0
			
	&_count
		@extends $count	
	ul
		text-align center
		width 510px
		margin 15px 0 0 60px
		display flex
		justify-content space-between
		
		li
			width 130px
			height 100px
			display inline-block
			cursor pointer
			
			div
				width 120px
				margin auto
				height 70px

			&:first-child div
				background url(../img/icon1.jpg) center no-repeat
			&:nth-child(2) div
				background url(../img/car.jpg) center no-repeat
			&:nth-child(3) div
				background url(../img/icon2.jpg) center no-repeat
			&:last-child div
				background url(../img/icon3.jpg) center no-repeat
				
			span
				font-size 12px
				display block