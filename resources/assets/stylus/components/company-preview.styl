.company-preview
	padding 15px
	cursor pointer
	display flex
	align-items flex-start
	
	&:hover
		background-color #faf7e9
		
		span
			color $linkred
		svg
			fill $linkred
		
		
	&_more
		color $blue
		font-size 12px
		cursor pointer
		align-self flex-start
		display flex
		align-items center
		font-style italic
		
		svg
			width 16px
			height 26px
			display inline-block
			vertical-align middle
			fill $blue
			margin-left 10px
	
	&-list
		margin 20px 0 0 0
		padding 0 35px
		line-height 120%
		
	&_logo
		background-position center
		background-repeat no-repeat
		background-size contain
		min-width 100px
		min-height 100px
		border 1px solid $grey
		border-radius 2px
		margin-right 20px
			
	&_info
		min-height 100px
		width 100%
		
		&:hover
			.company-preview_excerpt
				background-color transparent
		
		&_name
			font-size 24px
			margin-bottom 15px
			
		&_adress
			margin 10px 0
		&_contact
			margin 10px 0
			
			

	&_name
		margin 5px 0px
		font-weight 400
		
	&_adress
		font-size 90%
		font-weight 300
			
	&_excerpt
		margin 10px 0
		font-weight 300
		font-size 12px
		padding 8px
		background-color $grey
		margin-right 5px
		margin-bottom 5px
		color $color
		border-radius 2px
		left -7px
		

.company-popup
	letter-spacing 0.02em
	
	.company-preview
		
		&_logo
			min-width 150px
			min-height 150px
			
