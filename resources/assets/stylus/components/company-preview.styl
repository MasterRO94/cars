.company-preview
	padding 15px
	cursor pointer
	display flex
	align-items flex-start
	
	&:hover
		background-color #faf7e9
		
		span
			color $linkred
		svg
			fill $linkred
		
		
	&_more
		color $blue
		font-size 12px
		cursor pointer
		font-style italic
		top 20px
		right 20px
		position absolute

	&-list
		margin 20px 0 0 0
		padding 0 35px
		line-height 120%
		
		hr 
			margin 25px 0
			border-top 1px solid #F4F4F4
		
	&_logo
		background-position center
		background-repeat no-repeat
		background-size contain
		min-width 100px
		min-height 100px
		border 1px solid $grey
		border-radius 2px
		margin-right 40px
			
	&_info
		min-height 100px
		width 100%
		
		&:hover
			.company-preview_excerpt
				background-color transparent
		
		&_name
			font-size 24px
			margin-bottom 15px
			
		&_adress
			margin 10px 0
		&_contact
			margin 10px 0
			
			

	&_name
		margin 5px 0px
		font-weight 400
		
	&_address
		margin 10px 0
		font-size 80%
		font-weight 300
			
	&_excerpt
		margin 10px 0
		font-weight 300
		font-size 12px
		padding 8px
		background-color $grey
		margin-right 5px
		margin-bottom 5px
		color $color
		border-radius 2px
		left -7px
		width calc(100% + -7px)
		

.company-popup
	letter-spacing 0.02em
	
	.company-preview
		
		&_logo
			min-width 150px
			min-height 150px
			
