.company-preview
	padding 15px
	cursor pointer
	display flex
	align-items flex-start
	
	&:hover
		background-color #faf7e9
		
		span
			color $linkred
		svg
			fill $linkred
		
	&_more
		color $blue
		font-size 12px
		cursor pointer
		padding 10px
		position absolute
		top 5px
		right 15px
		
		svg
			width 16px
			height 26px
			display inline-block
			vertical-align middle
			fill $blue
			margin-left 10px
	
	&-list
		margin 20px 0 0 0
		padding 0 35px
		
	&_logo
		background-position center
		background-repeat no-repeat
		background-size contain
		min-width 100px
		min-height 100px
		border 1px solid $grey
		border-radius 2px
		margin-right 20px
			
	&_info
		min-height 100px
		
		h3, h5
			margin 0
		
		h3
			font-weight 400
			font-size 17px
			
		h5:first-of-type
			margin 10px 0
			font-size 12px
			font-weight 300
			
		h5:last-of-type
			color #FFF
			font-weight 400
			font-size 12px
			background-color rgba(45,45,45 .7)
			border-radius 3px
			padding 5px
			letter-spacing 0.04em