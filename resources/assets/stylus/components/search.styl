.search
	block-border()
	background-color #fff
	padding 20px 40px
	border-radius 2px
	display flex
	flex-direction column
	align-items center
	border 1px solid #ABABAB
	outline 3px solid #8A8A8A
	outline-offset -10px
	marginBar()

	
	&:hover
		outline-color #2d2D2D
		transition 0.5s
			

	h3
		font-size 16px
		margin 10px 0
		
	p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	&_button
		button(rgba(126, 126, 126, 0.68))
		button__add--red()
		text-shadow 0px 0px 2px #383838
		opacity .85
			
		&:hover
			color #f4f4f4
			opacity 1
			background-image: -webkit-linear-gradient(top,#f36d6d 0,#ff6161 50%,red 100%);
		
