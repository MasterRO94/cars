.search
	background-color $yellow
	padding 20px 40px
	border-radius 2px
	display flex
	flex-direction column
	align-items center
	
	h3
		font-size 16px
		margin 10px 0
		
	p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	&_button
		button(white)
		margin 10px 0
	
.popup
	position absolute
	display none
	background url(../img/popup.png) no-repeat center center
	top 0
	left 0
	right 0
	bottom 0