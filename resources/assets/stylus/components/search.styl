.search
	background-color $yellow
	padding 20px 40px
	border-radius 2px
	margin 0 0 10px 0
	display flex
	flex-direction column
	align-items center
	
	h3
		font-size 16px
		margin 10px 0
		
	p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	&_button
		button(rgba(126, 126, 126, 0.68))
		margin 10px 0
		background-color #fff
		box-shadow 0 8px 6px -6px rgba(126, 126, 126, 0.58)