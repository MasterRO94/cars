.search
	background-color #fff
	padding 20px 40px
	border-radius 2px
	margin 0 0 10px 0
	display flex
	flex-direction column
	align-items center
	border 3px solid $yellow
	
	h3
		font-size 16px
		margin 10px 0
		
	p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	&_button
		button(rgba(126, 126, 126, 0.68))
		margin 10px 0
		border-radius 2px
		border none
		font-size 14px
		letter-spacing .03em
		color rgba(70, 64, 64, 0.77)
		text-shadow 0px 1px 4px rgb(255, 245, 203)
		box-shadow 0 8px 6px -6px rgba(126, 126, 126, 0.58)
		background-image -webkit-linear-gradient(top, rgb(255, 229, 138) 0%,
			rgb(243, 223, 109) 50%, #f3df6d 51%, rgb(243, 198, 109) 100%)
		background linear-gradient(top, rgb(255, 229, 138) 0%,
			rgb(243, 223, 109) 50%, #f3df6d 51%, rgb(243, 198, 109) 100%)
		
		&:hover
			color #343333
			opacity: .9