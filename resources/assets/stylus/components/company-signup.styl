.company-signup
	block-border()
	background-color white
	padding 20px 40px
	display flex
	flex-direction column
	align-items center
	transition .2s ease-in
	border none
	background linear-gradient(to bottom, #FCE482 0%, #FDB334 100%)
	marginBar()
	outline 1px solid rgb(252, 227, 128)
	outline-offset -5px
	
	&_h3
		font-size 16px
		margin 10px 0
		text-align center
		
	&_p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	&_button
		button(rgba(126, 126, 126, 0.68))
		button__add--orange()
			
		&:hover
			color #FFF
			text-shadow 1px 1px #a8a8a8
		
		&_list_add
			float right
			right 37px
			top 30px
			color $bluelink
			cursor pointer
			font-size 80%
			z-index 2
			
			&:hover
				color $redlink	
	
	h3
		font-size 16px
		margin 10px 0
		text-align center
		
	p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
#company-signup-auth
	text-align center
	
	.popup_input
		margin 5px auto