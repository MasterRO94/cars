.show-orgs
	button($yellow)
	margin 0 auto 25px
	display none

.makes
	position relative
	margin 30px 0 0 0
	
	&_icon
		width 20px
		height 20px
		display inline-block
		vertical-align middle
		background-repeat no-repeat
		background-size cover
		margin 0 5px 0 0
	
	&--feed,
	&--catalog
		margin 0
			
	ul
		margin 30px 30px 60px 50px
		columns 4
		cf()
		
		li
			display inline-block
			position relative
			font-size 13px
			width 125px
			margin-bottom 10px
			padding 0px
			
			&>span
				color $blue
				display inline-block
				cursor pointer
				white-space nowrap
				a	
					display inline
					text-decoration underline
	
	&--live
		ul
			li
				padding 0
				span
					padding 9px 15px
					text-decoration none
					color $color
					&:hover
						background-color $orange
	
	&--active
		span
			background-color $orange
			
	&_empty
		position absolute
		top 60px
		font-size 14px
		left 84px
		display none	