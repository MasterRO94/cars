.show-orgs
	button($yellow)
	margin 0 auto 25px
	display none

.makes
	position relative
	margin 30px 0 0 0
	
	h2
		margin 10px 0px
	
	&_icon
		width 100%
		height 26px
		display block
		vertical-align middle
		background-repeat no-repeat
		background-size contain
		background-position 50% 50%
	
	&--feed
		margin 0
	&--catalog
		margin 0 35px
			
	ul
		padding 30px 0
		columns 4
		cf()
		
		li
			display inline-block
			position relative
			font-size 13px
			padding 0px
			
			&>span
				color $blue
				display inline-block
				width 100%
				text-align center
				margin-bottom 20px
				font-size 90%
				
				a	
					display block
					padding 25px 0 0
					margin-top -20px
					text-decoration underline
					color $bluelink
					
					&:hover
						color $linkred
	
	&--live
		ul
			li
				padding 0
				span
					padding 9px 15px
					text-decoration none
					color $color
					&:hover
						background-color $orange
	
	&--active
		span
			background-color $orange
			
	&_empty
		position absolute
		top 60px
		font-size 14px
		left 84px
		display none	
		

// the fadeIn animation at catalog-makes
#catalog-makes
	animation makes-fadeIn
	animation-duration 5s
	
@keyframes makes-fadeIn
	0% 
		opacity 0
	75% 
		opacity 0
		margin-right -20px
		
	100% 
		opacity 100%
		margin 0