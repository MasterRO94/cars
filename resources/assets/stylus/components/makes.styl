.makes
	position relative
	margin 30px 0 0 0
	
	&_count
		color $color
		text-decoration none
		margin-left 5px
			
	ul
		margin-left 70px
		padding 30px 0
		cf()
		
		li
			float left
			font-size 13px
			width 125px
			margin-bottom 5px
			padding 9px 0px
			
			&>span
				color #4e61eb
				cursor pointer
				a	
					display inline
					text-decoration underline
	
	&--live
		ul
			li
				padding 0
				span
					padding 9px 15px
					text-decoration none
					color $color
					&:active, &:hover
						background-color $orange