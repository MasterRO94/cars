hr
	border-top 1px solid $grey
	border-right 0
	border-bottom 0
	border-left 0
	margin 0
	
body
	margin 0
	font-family $font
	font-weight 300
	background-color #fefefe
	
a
	color inherit
	text-decoration none
	height 100%
	width 100%
	display inline-block
	
	&:hover 
		opacity .8
	
ul, ol
	margin 0
	padding 0
	list-style none
	
h3
	font-size 18px
	word-spacing 2px
	
.clear-fix
	cf()
	
.left
	float left
	
.right
	float right
	
.alert-message
	font-size 14px
	color #777
	line-height 20px