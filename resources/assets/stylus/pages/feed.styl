.feed
	position relative
	overflow hidden
	
	.container
		position relative
		margin-top 25px
		cf()
		display flex
	
	&_left
		margin-right 10px
		background-color white
		width 868px
		block-border()
		
	&_right
		width 260px
		
	&_header
		@extends $header
		
		
	&-sort
		margin 0 0 10px 35px
		width 235px
		font-size 14px
		display flex
		justify-content space-between
		
		&--model
			margin 30px 0 30px 35px
		
		&_item
			color #ccc
		
		&--active
			color $blue
			text-decoration underline
			cursor pointer
			
		