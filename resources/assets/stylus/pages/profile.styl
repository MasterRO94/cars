.profile
	position relative
	overflow hidden
	
	.container
		position relative
		margin-top 25px
		cf()
		
	&_left
		margin-right 10px
		float left
		width 868px
		block-border()
		
	&_right
		float right
		width 260px
		
	&_settings
		float right
		cursor pointer
		font-size 14px
		
		&-icon
			background url(../img/cogwheel.png) no-repeat center
			width 13px
			height 13px
			display inline-block
			position relative
			top 1px
		
.profile-info
	padding 0 35px
	margin-top 25px
		
	&_header
		cf()
		
	&_toogler
		float left
		
		div
			color $yellow
			cursor pointer
			font-size 14px
			display inline-block
			
			&:first-child
				margin-right 40px
		
		div&--active
			font-size 20px
			font-weight 400
			word-spacing 2px
			color black
			
	&_body
		margin-top 20px
		display flex
			
	&_left
		width 115px
		margin-right 30px
		
	&_right
		width 673px
		
	&_logo
		block-border()
		width 115px
		height 115px
		
	&_name
		margin 0
		font-size 18px
		font-weight 400
	
	&_pen
		width 8px
		height 9px
		display inline-block
		cursor pointer
		margin-left 20px
		background url(../img/pen.png) no-repeat center
		
	&_address
		font-size 12px
		margin 7px 0
	
	&_phone
		font-size 14px
		letter-spacing .6px
		
	&_about
		margin 20px 0 0 0
		font-size 14px
		width 550px
		line-height 20px
		
	&_tags
		margin 20px 0 0 0
		display flex
		
		li
			margin-right 5px
			font-size 12px
			background-color #f6f6f6
			padding 8px
			border-radius 2px
	