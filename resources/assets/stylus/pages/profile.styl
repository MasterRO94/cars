.profile
	position relative
	overflow hidden
	min-height 400px
	
	&_row
		display flex
		margin-bottom 10px
		
	&_label
		font-size 14px
		font-weight 400
		margin-right 10px
	
	.container
		position relative
		margin-top 25px
		cf()
		
	&_left
		margin-right 10px
		padding-bottom 25px
		float left
		width 868px
		background-color white
		block-border()
		
	&_right
		float right
		width 260px
		
	&_settings
		float right
		cursor pointer
		font-size 14px
		
		&-icon
			background url(../img/cogwheel.png) no-repeat center
			width 13px
			height 13px
			display inline-block
			position relative
			top 1px
	
	&_verify
		font-size 14px
		margin 25px 0 0 25px
		
		a
			color $blue
			display inline
		
.profile-info
	padding 0 35px
	margin 25px 0
	min-height 170px
		
	&_header
		cf()
		
	&_toogler
		float left
		
		&--active
			@extends $toogler--active
		
	&_company,
	&_profile
		@extends $toogler--default
		user-select none
			
	&_body
		margin-top 20px
		display flex
			
	&_left
		width 115px
		margin-right 30px
		
	&_right
		width 673px
		
	&_logo
		width 115px
		height 115px
		cursor pointer
		position relative
		
		img
			max-height 115px
			max-width 115px

		&::after
			content 'изменить'
			color $yellow
			position absolute
			left 10px
			bottom 0
			font-size 12px
		
	&_name
		margin 0
		font-size 16px
		font-weight 400
	
	&_pen
		width 8px
		height 10px
		display inline-block
		cursor pointer
		margin-left 20px
		position relative
		background url(../img/pen.png) no-repeat center
		
		&::after
			content 'изменить'
			color $yellow
			position absolute
			left 10px
			font-size 12px
		
	&_address
		font-size 12px
	
	&_phone
		font-size 12px
		letter-spacing .6px
		
	&_about
		width 500px
		line-height 20px
		font-size 14px
		
	&_tags
		display flex
		flex-wrap wrap
		margin-left 10px
		
		li
			margin-right 5px
			margin-bottom 5px
			font-size 12px
			background-color #f6f6f6
			padding 8px
			border-radius 2px
			
.profile--hidden
	display none