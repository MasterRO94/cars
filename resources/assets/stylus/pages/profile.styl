$toogler--default
	color $yellow
	cursor pointer
	font-size 14px
	display inline-block
	
	&:first-child
		margin-right 40px

$toogler--active
	font-size 20px
	font-weight 400
	word-spacing 2px
	color black
	cursor auto
	

.profile
	position relative
	overflow hidden
	
	.container
		position relative
		margin-top 25px
		cf()
		
	&_left
		margin-right 10px
		float left
		width 868px
		block-border()
		
	&_right
		float right
		width 260px
		
	&_settings
		float right
		cursor pointer
		font-size 14px
		
		&-icon
			background url(../img/cogwheel.png) no-repeat center
			width 13px
			height 13px
			display inline-block
			position relative
			top 1px
		
.profile-info
	padding 0 35px
	margin-top 25px
		
	&_header
		cf()
		
	&_toogler
		float left
		
		&--active
			@extends $toogler--active
		
	&_company,
	&_profile
		@extends $toogler--default
			
	&_body
		margin-top 20px
		display flex
			
	&_left
		width 115px
		margin-right 30px
		
	&_right
		width 673px
		
	&_logo
		block-border()
		width 115px
		height 115px
		
	&_name
		margin 0
		font-size 18px
		font-weight 400
	
	&_pen
		width 8px
		height 9px
		display inline-block
		cursor pointer
		margin-left 20px
		background url(../img/pen.png) no-repeat center
		
	&_address
		font-size 12px
		margin 7px 0
	
	&_phone
		font-size 14px
		letter-spacing .6px
		
	&_about
		margin 20px 0 0 0
		font-size 14px
		width 550px
		line-height 20px
		
	&_tags
		margin 20px 0 0 0
		display flex
		
		li
			margin-right 5px
			font-size 12px
			background-color #f6f6f6
			padding 8px
			border-radius 2px
			
.requests
	margin-top 25px
	padding 0 35px
	
	&_toogler
		&--active
			@extends $toogler--active
	
	&_received,
	&_sent
		@extends $toogler--default
		
	&_logo
		width 45px
		height 45px
		border-radius 50%
		overflow hidden
		border 1px solid $grey
		
		img
			height 60px
		
	&_name
		font-size 16px
		font-weight 400
		margin-left 10px
		center-text()
		
	&_body
		padding 15px
		border-radius 2px
		font-size 14px
		letter-spacing .4px
		
			
$request_body
	padding 15px
	border-radius 2px
	font-size 14px
	letter-spacing .4px
	position relative
	
	&--yellow
		background-color $orange
		&:before
			border-right 9px solid $orange
		
	&--yellow,
	&--grey
		&:before
			content ''
			border-top 9px solid transparent
			border-bottom 9px solid transparent
			position absolute
			left -9px
			top 45%
		
	&--grey
		background-color $grey
		&:before
			border-right 9px solid $grey

$request_logo-name
	display flex
	align-items center
	
$request_time
	color #ccc
	font-size 12px
	width 80px
	align-self center
		
.sent-requests
	margin-top 35px
	
	&_item
		margin-bottom 15px
	
	&_request
		display flex
		justify-content space-between
		align-items flex-start
			
	&_logo-name
		@extends $request_logo-name
		width 300px
		
	&_body
		@extends $request_body
		width 350px
		
	&_time
		@extends $request_time
		text-align center
		
	// -----
	// answer
	// -----
	
	&_answer
		display flex
		justify-content space-between
		margin-top 15px
		
	&_answ-time
		@extends $request_time
		
	&_answer-info
		width 250px
			
	&_answer-contacts
		font-size 12px
		line-height 17px
		color #ccc
		margin-top 7px
		
	&_answer-body
		@extends $request_body
		width 463px