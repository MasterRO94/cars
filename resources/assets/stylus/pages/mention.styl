.mention
	padding 25px 35px
	line-height 170%
	
	&_add
		color $bluelink
		cursor pointer
		font-size 80%
		position absolute
		right 36px
		top -10px
		
		&:hover
			color $redlink	

	&_head
		display flex
		justify-content space-between
		clear both
	
	&_header
		margin 0
		font-weight 400
	
	&_date-user
		display flex
		
	&_info
		width 550px
		
	&_votes
		display flex
		justify-content space-between
		
		svg
			margin 20px 
				
		&:before 
			content "Рейтинг статьи: "
			position absolute
			font-size 70%
			color #2D2D2D
			letter-spacing 0.06em
			white-space nowrap
			top -5px
			right 0
			font-style italic
		
	&_votes &_likes,
	&_votes &_dislikes
		cursor auto
		
	&_date
		color #ccc
		font-size 12px
		margin-right 10px
		
	&_user
		color $blue
		font-size 14px
		
	// ======================
	// ======= slider
		
	&_photos
		margin-top 20px


	// ======= slider
	// ======================
	
	
	&_likes,
	&_dislikes
		font-size 18px
		font-weight 400
		display flex
		align-items center
		user-select none
		cursor pointer
		
		span
			margin-right 7px
	
	&_likes
		color #cbe887
		
		&--active
			background-color #f6fae9
		
	&_dislikes
		color #dbdbdb
		
		&--active
			background-color #f4f4f4
		
	&_content
		margin-top 15px
		font-size 14px
		
		ul, ol
			list-style-position inside
		ul
			list-style-type disc
		ol
			list-style-type decimal
		
	&_rate
		margin-top 20px
		display flex
		align-items center
		
		&>span
			font-size 14px
			margin-right 20px
			
	&_pluses-minuses
		margin-top 20px
		display flex
		justify-content space-between
		
	&_pluses,
	&_minuses
		padding 15px 15px
		border-width 2px
		border-style solid
		width 360px
		
		h4
			margin 0 0 10px 0
			font-weight 400
			
	&_pluses
		border-color #cbe887
		
		h4
			color #cbe887
			
	&_minuses
		border-color #dbdbdb
		
		h4
			color #dbdbdb
			
	&_minus,
	&_plus
		font-size 13px
		
	&_minus-sign
		color #dbdbdb
		
	&_plus-sign
		color #cbe887
		


	&-side
		background-color white
		block-border()
		padding 20px
		text-align center
		
			
	&-header
		font-size 16px
		margin 10px 0

	&-block
		padding 13px 10px
		text-align left
		border-bottom 1px solid #F5F5F5
		
		&:last-child
			border none
			
		&_header
			
			a
				color #4e61eb
				display block
				z-index 10
				
				&:hover
					color $linkred
			img
				float left
				margin-right 5px
				width 19px
				
		&_body
			clear both
			font-style italic
			
		&_date
			color #ccc
			font-size 80%
			margin 3px 0
		
		hr 
			margin 20px 0 0
	
	&-link
		display block
		width 100%
		text-align right
		margin 10px 0 0
		color $blue
		font-size 90%
		
		&:before
			content '/'
			color black
			margin-right 5px
			