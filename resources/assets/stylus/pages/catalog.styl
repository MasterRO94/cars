.catalog-content
	position relative
	padding-top 1px
	background-color #f3f3f3
	
.c_c
	position relative
	margin-top 125px
	cf()

// ----------------------------------
// left block
// ----------------------------------

.c_left
	margin-right 10px
	float left
	width 870px
	background-color white
	border-radius 10px
	
	color $color
	
	.c_top
		position relative
		margin-top 25px
		
		h3
			margin 0 0 0 35px
			width 185px
		
		.c_add-organization
			position absolute
			top 15px
			right 40px
			button($grey)
		
		.c_toogler
			margin 20px 0 0 35px
			display flex
			
			div
				font-size 14px
				background-color $grey
				margin-right 1px
				width 90px
				cursor pointer
				height 35px
				center-text()
				
				&.active
					background-color $orange


	.c_parts-header
		margin 35px 0 0 0
		display flex
		
		h3
			display inline-block
			margin 5px 0 0 15px
			font-size 17px
		hr
			margin 17px 0 0 75px
			width 643px

	.c_categories
		margin 10px 0 0 70px
		height 160px
		display flex
		flex-flow column wrap
		width 440px
		
		li
			float left
			font-size 12px
			margin-bottom 5px
			
			span
				padding 9px 15px
				display inline-block
				cursor pointer
				
				&.active, &:hover
					background-color $orange
			

	.c_make-header
		display flex
		
		h3
			display inline-block
			margin 5px 0 0 15px
			font-size 17px
		hr
			margin 17px 0 0 75px
			width 499px

	.c_makes
		margin 20px 0 0 70px
		height 250px
		display flex
		flex-flow column wrap
		
		li
			float left
			font-size 13px
			margin-bottom 5px
			
			span
				padding 9px 15px
				display inline-block
				cursor pointer
				
				&.active, &:hover
					background-color $orange

	.c_show-orgs
		button($yellow)
		margin auto
		
	.c_show-more-orgs
		button($grey)
		margin 20px auto
	

	.founded-orgs
		margin 35px 0 0 0
		padding 0 0 10px 35px
		
		h2
			margin 20px 0 0 0
			font-size 21px
			font-weight 400
		
		ul
			margin 40px 0 0 0
			li
				width 390px
				height 102px
				float left
				padding 10px
				cursor pointer
				
				&:hover
					background-color #faf7e9
				
				.f-o_logo
					background url(../img/com_logo.jpg) center no-repeat
					width 100px
					height 100px
					border 1px solid $grey
					float left
				
				.org-text
					height 100px
					padding-left 20px
					display flex
					flex-direction column
					justify-content center
					
					h3, h5
						margin 0
					
					h3
						font-weight 400
						font-size 17px
						
					h5:first-of-type
						margin 10px 0
						font-size 12px
						font-weight 300
						
					h5:last-of-type
						color #ccc
						font-weight 300
						font-size 12px
					

	
// ----------------------------------
// / left block
// ----------------------------------
	

// ----------------------------------
// right block
// ----------------------------------

.c_right
	float right
	width 260px
	border-radius 2px
			
.c_feedback
	margin 10px 0 0 0
	background-color white
	padding 20px 40px
	display flex
	flex-direction column
	align-items center
	
	
	h3
		font-size 16px
		margin 10px 0
		
	p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	.c_left-feedback
		margin 10px 0
		button($yellow)
	
	
// ----------------------------------
// / right block
// ----------------------------------