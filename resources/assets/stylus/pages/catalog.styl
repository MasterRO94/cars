.catalog-content
	position relative
	overflow hidden
	
.c_c
	position relative
	margin-top 25px
	cf()

// ----------------------------------
// left block
// ----------------------------------

.c_left
	margin-right 10px
	float left
	width 868px
	background-color white
	border-radius 2px
	block-border()
	
	color $color
	
	.c_top
		position relative
		margin-top 25px
		
		h3
			margin 0 0 0 35px
			width 185px
		
		.c_add-organization
			position absolute
			top 15px
			right 40px
			button($grey)
		
	.c_show-more-orgs
		button($grey)
		margin 20px auto
	

	.founded-orgs
		margin 35px 0 0 0
		padding 0 0 10px 35px
		
		h2
			margin 20px 0 0 0
			font-size 21px
			font-weight 400
		
		ul
			margin 40px 0 0 0
			li
				width 390px
				height 102px
				float left
				padding 10px
				cursor pointer
				
				&:hover
					background-color #faf7e9
				
				.f-o_logo
					background url(../img/com_logo.jpg) center no-repeat
					width 100px
					height 100px
					border 1px solid $grey
					float left
				
				.org-text
					height 100px
					padding-left 20px
					display flex
					flex-direction column
					justify-content center
					
					h3, h5
						margin 0
					
					h3
						font-weight 400
						font-size 17px
						
					h5:first-of-type
						margin 10px 0
						font-size 12px
						font-weight 300
						
					h5:last-of-type
						color #ccc
						font-weight 300
						font-size 12px
					

	
// ----------------------------------
// / left block
// ----------------------------------
	

